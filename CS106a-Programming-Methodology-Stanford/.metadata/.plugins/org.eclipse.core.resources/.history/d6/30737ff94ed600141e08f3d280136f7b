 * that changing these values causes the generated display
 * to change accordingly.
 */

import acm.graphics.*;
import acm.program.*;
import java.awt.*;

public class Pyramid extends GraphicsProgram {

/** Width of each brick in pixels */
	private static final int BRICK_WIDTH = 30;

/** Width of each brick in pixels */
	private static final int BRICK_HEIGHT = 12;

/** Number of bricks in the base of the pyramid */
	private static final int BRICKS_IN_BASE = 14;
	
	public void run() {
		//Bricks must start at the bottom of the screen
		//and be centered.
		//Set x position of first brick
		int brickStart_x = BRICK_WIDTH;
		//Set y position of first brick
		int brickStart_y = (BRICK_HEIGHT*BRICKS_IN_BASE)+(10*BRICK_HEIGHT);
		//Place first brick
		GRect block = new GRect(brickStart_x,brickStart_y,BRICK_WIDTH,BRICK_HEIGHT);
		add(block);
		//Place the first row of bricks by changing the x value
		int rowPosition = 1;
		int newX = brickStart_x;
		while(rowPosition < BRICKS_IN_BASE){
			newX += BRICK_WIDTH;
			block = new GRect(newX,brickStart_y,BRICK_WIDTH,BRICK_HEIGHT);
			rowPosition+=1;
			add(block);
		}
	}
}

